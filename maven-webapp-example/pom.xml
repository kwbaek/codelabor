<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.codelabor</groupId>
  <artifactId>maven-webapp-example</artifactId>
  <packaging>war</packaging>
  <version>1.1-SNAPSHOT</version>
  <name>maven-webapp-example Maven Webapp</name>
  <url>http://codelabor.org</url>
  <scm>
  	<connection>scm:svn:http://griffin.codelabor.org/svn/codelabor/trunk/maven-webapp-example</connection>
  	<developerConnection>scm:svn:http://griffin.codelabor.org/svn/codelabor/trunk/maven-webapp-example</developerConnection>
  	<url>http://griffin.codelabor.org/svn/codelabor/trunk/maven-webapp-example</url>
  </scm>
  <build>
  	<finalName>maven-webapp-example</finalName>
  	<plugins>
  		<plugin>
  			<groupId>org.apache.maven.plugins</groupId>
  			<artifactId>maven-release-plugin</artifactId>
  			<configuration>
				<username>${scm.username}</username>
				<password>${scm.password}</password>
  			</configuration>
  		</plugin>
  	</plugins>
  </build>  
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
    	<groupId>org.slf4j</groupId>
    	<artifactId>slf4j-api</artifactId>
    	<version>1.5.3</version>
    	<optional>false</optional>
    </dependency>
    <dependency>
    	<groupId>org.slf4j</groupId>
    	<artifactId>slf4j-log4j12</artifactId>
    	<version>1.5.3</version>
    	<optional>false</optional>
    </dependency>    
    <dependency>
    	<groupId>log4j</groupId>
    	<artifactId>log4j</artifactId>
    	<version>1.2.14</version>
    	<optional>false</optional>
    </dependency>
    <dependency>
    	<groupId>javax.servlet</groupId>
    	<artifactId>servlet-api</artifactId>
    	<version>2.5</version>
    	<type>jar</type>
    </dependency>
    <dependency>
    	<groupId>javax.servlet.jsp</groupId>
    	<artifactId>jsp-api</artifactId>
    	<version>2.2</version>
    </dependency>
    <dependency>
    	<groupId>taglibs</groupId>
    	<artifactId>standard</artifactId>
    	<version>1.1.2</version>
    </dependency>
  </dependencies>
   <distributionManagement>
	<repository>
		<id>codelabor.release</id>
		<url>http://griffin.codelabor.org:8080/archiva/repository/release</url>
	</repository>
	<snapshotRepository>
		<id>codelabor.snapshots</id>
		<url>http://griffin.codelabor.org:8080/archiva/repository/snapshots</url>
	</snapshotRepository>	
  </distributionManagement>  
</project>
