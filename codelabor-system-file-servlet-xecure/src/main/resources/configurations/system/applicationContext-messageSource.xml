<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<bean
		id="messageSource"
		class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<!-- spring security -->
				<value>classpath:org/springframework/security/messages</value>

				<!-- anyframe message -->
				<value>classpath:anyframe/core/properties/messages/properties</value>
				<value>classpath:anyframe/core/idgen/messages/idgeneration</value>
				<value>classpath:anyframe/core/process/messages/process</value>
				<value>classpath:anyframe/core/adaptormanager/messages/adaptormanager</value>
				<value>classpath:anyframe/core/query/messages/query</value>
				
				<!-- tempate (classpath) -->
				<!--
				<value>classpath:messages/xxx/button</value>
				<value>classpath:messages/xxx/errors</value>
				<value>classpath:messages/xxx/images</value>
				<value>classpath:messages/xxx/label</value>
				<value>classpath:messages/xxx/menu</value>
				<value>classpath:messages/xxx/messages</value>
				-->
				
				<!-- root -->
				<value>classpath:messages/button</value>
				<value>classpath:messages/errors</value>
				<value>classpath:messages/images</value>
				<!--  
				<value>classpath:messages/label</value>
				-->
				<value>/WEB-INF/classes/messages/label</value>
				<value>classpath:messages/menu</value>
				<value>classpath:messages/messages</value>				
				
				<!-- system -->
				<value>classpath:messages/system/button</value>
				<value>classpath:messages/system/errors</value>
				<value>classpath:messages/system/images</value>
				<value>classpath:messages/system/label</value>
				<value>classpath:messages/system/menu</value>
				<value>classpath:messages/system/messages</value>

				<!-- system error -->
				<value>classpath:messages/system/error/button</value>
				<value>classpath:messages/system/error/errors</value>
				<value>classpath:messages/system/error/images</value>
				<value>classpath:messages/system/error/label</value>
				<value>classpath:messages/system/error/menu</value>
				<value>classpath:messages/system/error/messages</value>

				<!-- system file -->
				<value>classpath:messages/system/file/button</value>
				<value>classpath:messages/system/file/errors</value>
				<value>classpath:messages/system/file/images</value>
				<value>classpath:messages/system/file/label</value>
				<value>classpath:messages/system/file/menu</value>
				<value>classpath:messages/system/file/messages</value>
				
				<!-- system preferences -->
				<value>classpath:messages/system/preferences/button</value>
				<value>classpath:messages/system/preferences/errors</value>
				<value>classpath:messages/system/preferences/images</value>
				<value>classpath:messages/system/preferences/label</value>
				<value>classpath:messages/system/preferences/menu</value>
				<value>classpath:messages/system/preferences/messages</value>				

				<!-- tempate (directory) -->
				<!--
				<value>/WEB-INF/classes/messages/xxx/button</value>
				<value>/WEB-INF/classes/messages/xxx/errors</value>
				<value>/WEB-INF/classes/messages/xxx/images</value>
				<value>/WEB-INF/classes/messages/xxx/label</value>
				<value>/WEB-INF/classes/messages/xxx/menu</value>
				<value>/WEB-INF/classes/messages/xxx/messages</value>
				-->

				<!-- example -->
				<value>/WEB-INF/classes/messages/example/button</value>
				<value>/WEB-INF/classes/messages/example/errors</value>
				<value>/WEB-INF/classes/messages/example/images</value>
				<value>/WEB-INF/classes/messages/example/label</value>
				<value>/WEB-INF/classes/messages/example/menu</value>
				<value>/WEB-INF/classes/messages/example/messages</value>

				<!-- example file -->
				<value>/WEB-INF/classes/messages/example/file/button</value>
				<value>/WEB-INF/classes/messages/example/file/errors</value>
				<value>/WEB-INF/classes/messages/example/file/images</value>
				<value>/WEB-INF/classes/messages/example/file/label</value>
				<value>/WEB-INF/classes/messages/example/file/menu</value>
				<value>/WEB-INF/classes/messages/example/file/messages</value>
			</list>
		</property>
		<property name="cacheSeconds" value="1"/>
	</bean>
</beans>
